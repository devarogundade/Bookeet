<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onBoardFragment">
    <fragment
        android:id="@+id/onBoardFragment"
        android:name="team.pacify.bookeet.ui.onboard.OnBoardFragment"
        android:label="fragment_on_board"
        tools:layout="@layout/fragment_on_board" >
        <action
            android:id="@+id/action_onBoardFragment_to_phoneFragment"
            app:destination="@id/phoneFragment"
            app:popUpTo="@id/onBoardFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/phoneFragment"
        android:name="team.pacify.bookeet.ui.auth.PhoneFragment"
        android:label="fragment_phone"
        tools:layout="@layout/fragment_phone" >
        <action
            android:id="@+id/action_phoneFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/phoneFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="team.pacify.bookeet.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_transactionsFragment"
            app:destination="@id/transactionsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_baseAddFragment"
            app:destination="@id/baseAddFragment" />
        <action
            android:id="@+id/action_mainFragment_to_bookKeepingFragment"
            app:destination="@id/bookKeepingFragment" />
    </fragment>
    <fragment
        android:id="@+id/transactionsFragment"
        android:name="team.pacify.bookeet.ui.transactions.TransactionsFragment"
        android:label="fragment_transactions"
        tools:layout="@layout/fragment_transactions" />
    <fragment
        android:id="@+id/baseAddFragment"
        android:name="team.pacify.bookeet.ui.additem.BaseAddFragment"
        android:label="fragment_base_add"
        tools:layout="@layout/fragment_base_add" />
    <fragment
        android:id="@+id/bookKeepingFragment"
        android:name="team.pacify.bookeet.ui.bookkeeping.BookKeepingFragment"
        android:label="fragment_book_keeping"
        tools:layout="@layout/fragment_book_keeping" />
</navigation>